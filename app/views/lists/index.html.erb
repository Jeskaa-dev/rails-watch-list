<p style="color: green"><%= notice %></p>

<div class="page">

  <div class="navbar">
    <img src="file:///Users/jeromeanciaux/code/Jeskaa-dev/rails-watch-list/app/assets/images/picto-cinema.png" class="picto-navbar">
    <div class="navbar-btns">
      <div class="navbar-btn">My Lists</div>
      <div class="navbar-btn">New list</div>
    </div>
  </div>

  <div class="banniere">
    <h1>Save any kind of movie</h1>
  </div>

  <div class="mylists">
    <h2>What to watch</h2>
    <div class="addlist">
      <p>Add a list</p>
      <%= link_to new_list_path do %>
      <i class="fa-solid fa-plus"></i>
      <% end %>
    </div>

    <%# <div class="navbar-btn"></div> %>
  </div>

  <div class="containlist">
    <% @lists.each do |list| %>
    <div class="lists">
      <%= render list %>
      <%= link_to list do%>
      <div class="showlist-btn">Show this list</div>
     <% end %>


      </div>
    <% end %>

  </div>

</div>
